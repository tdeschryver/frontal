{
  "name": "frontal",
  "version": "0.0.0-beta.7",
  "scripts": {
    "start": "ng serve",
    "e2e": "ng e2e",
    "lint": "ng lint --type-check",
    "precommit": "lint-staged",
    "transpile": "ngc -p ./src/tsconfig.build.json",
    "package": "rollup -c ./src/rollup.config.js",
    "minify": "uglifyjs ./dist/bundles/frontal.umd.js --screw-ie8 --compress --mangle --comments --output ./dist/bundles/frontal.umd.min.js",
    "prebuild": "rm -rf ./dist/*",
    "build": "npm run transpile && npm run package && npm run minify",
    "postbuild": "cp ./README.md ./dist && cp ./src/package.json ./dist"
  },
  "lint-staged": {
    "*.{ts,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@angular/animations": "^6.0.0-rc.3",
    "@angular/common": "^6.0.0-rc.3",
    "@angular/compiler": "^6.0.0-rc.3",
    "@angular/core": "^6.0.0-rc.3",
    "@angular/forms": "^6.0.0-rc.3",
    "@angular/http": "^6.0.0-rc.3",
    "@angular/platform-browser": "^6.0.0-rc.3",
    "@angular/platform-browser-dynamic": "^6.0.0-rc.3",
    "@angular/router": "^6.0.0-rc.3",
    "bootstrap": "^4.0.0",
    "core-js": "^2.4.1",
    "frontal": "0.0.0-beta.6",
    "rxjs": "^6.0.0-tactical-rc.1",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.5.0",
    "@angular/cli": "~6.0.0-rc.2",
    "@angular/compiler-cli": "^6.0.0-rc.3",
    "@angular/language-service": "^6.0.0-rc.3",
    "@types/jasmine": "~2.8.3",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "codelyzer": "^4.0.1",
    "husky": "^0.14.3",
    "jasmine-core": "~2.8.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "lint-staged": "^7.0.0",
    "prettier": "^1.11.1",
    "protractor": "~5.1.2",
    "rollup": "^0.57.1",
    "rxjs-compat": "6.0.0-rc.0",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "typescript": "~2.7.2",
    "uglify-js": "^3.3.15"
  }
}
