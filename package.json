{
  "name": "frontal",
  "version": "2.0.0-beta.6",
  "scripts": {
    "start": "ng serve",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "build:server": "npm run build:client-and-server-bundles && npm run webpack:server",
    "start:server": "node dist/server.js",
    "webpack:server": "webpack --config webpack.server.config.js --progress --colors",
    "build:client-and-server-bundles": "ng build --prod --project=app && ng build --prod --project=server",
    "build:prerender": "npm run build:server && npm run generate:prerender",
    "serve:prerender": "node dist/prerender.js",
    "generate:prerender": "node dist/prerender.js",
    "pree2e": "npm run build:server",
    "e2e": "npm-run-all --parallel --race start:server \"cypress:run -- --config=baseUrl=http://localhost:4000\"",
    "lint": "ng lint --type-check",
    "precommit": "lint-staged",
    "transpile": "ngc -p ./src/tsconfig.build.json",
    "package": "rollup -c ./src/rollup.config.js",
    "minify": "uglifyjs ./dist/bundles/frontal.umd.js --screw-ie8 --compress --mangle --comments --output ./dist/bundles/frontal.umd.min.js",
    "transpile-migrations": "tsc -p ./migrations/tsconfig.migrations.json",
    "prebuild": "rm -rf ./dist/*",
    "build": "npm run transpile && npm run package && npm run minify && npm run transpile-migrations",
    "postbuild": "cp ./README.md ./dist && cp ./src/package.json ./dist && cp ./migrations/migration.json ./dist/migrations",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run"
  },
  "lint-staged": {
    "*.{ts,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./__tests__/tsconfig.test.json"
      }
    },
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/test.ts"
  },
  "dependencies": {
    "@angular/animations": "^6.0.1",
    "@angular/common": "^6.0.1",
    "@angular/compiler": "^6.0.1",
    "@angular/core": "^6.0.1",
    "@angular/forms": "^6.0.1",
    "@angular/http": "^6.0.1",
    "@angular/platform-browser": "^6.0.1",
    "@angular/platform-browser-dynamic": "^6.0.1",
    "@angular/platform-server": "^6.0.1",
    "@angular/router": "^6.0.1",
    "bootstrap": "^4.0.0",
    "core-js": "^2.4.1",
    "rxjs": "^6.1.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.1",
    "@angular/cli": "~6.0.1",
    "@angular/compiler-cli": "^6.0.1",
    "@angular/language-service": "^6.0.1",
    "@nguniversal/express-engine": "^6.0.0",
    "@nguniversal/module-map-ngfactory-loader": "^6.0.0",
    "@types/express": "^4.11.1",
    "@types/node": "~6.0.60",
    "codelyzer": "^4.0.1",
    "cypress": "^2.1.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "jest-preset-angular": "^5.2.1",
    "lint-staged": "^7.0.0",
    "ngx-testing-library": "0.0.1",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.11.1",
    "rollup": "^0.57.1",
    "rxjs-compat": "6.1.0",
    "ts-loader": "^4.2.0",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "typescript": "~2.7.2",
    "uglify-js": "^3.3.15",
    "webpack-cli": "^2.1.2"
  }
}
