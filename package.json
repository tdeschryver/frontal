{
  "name": "frontal",
  "version": "0.0.0",
  "scripts": {
    "start": "ng serve",
    "test": "jest --config ./projects/frontal/jest.config.js",
    "test:watch": "npm run test -- --watch",
    "test:cov": "npm run test -- --coverage",
    "prebuild:frontal": "rm -rf ./dist/*",
    "build:frontal": "npm run build:lib && npm run build:lib-migrations",
    "build:lib": "ng build frontal --prod",
    "postbuild:lib": "cp ./README.md ./dist/frontal",
    "build:lib-migrations": "tsc -p ./projects/frontal/migrations/tsconfig.migrations.json",
    "postbuild:lib-migrations": "cp ./projects/frontal/migrations/migration.json ./dist/frontal/migrations",
    "build:server": "npm run build:client-and-server-bundles && npm run webpack:server",
    "build:client-and-server-bundles": "ng build app --prod && ng build server --prod",
    "build:prerender": "npm run build:server && npm run generate:prerender",
    "start:server": "node dist/server.js",
    "webpack:server": "webpack --config webpack.server.config.js --progress --colors",
    "generate:prerender": "node dist/prerender.js",
    "serve:prerender": "node dist/prerender.js",
    "pree2e": "npm run build:server",
    "e2e": "npm-run-all --parallel --race start:server \"cypress:run -- --config=baseUrl=http://localhost:4000\"",
    "lint": "ng lint frontal --type-check && ng lint app --type-check",
    "precommit": "lint-staged",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run"
  },
  "lint-staged": {
    "*.{ts,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@angular/animations": "^6.0.1",
    "@angular/common": "^6.0.1",
    "@angular/compiler": "^6.0.1",
    "@angular/core": "^6.0.1",
    "@angular/forms": "^6.0.1",
    "@angular/http": "^6.0.1",
    "@angular/platform-browser": "^6.0.1",
    "@angular/platform-browser-dynamic": "^6.0.1",
    "@angular/platform-server": "^6.0.1",
    "@angular/router": "^6.0.1",
    "bootstrap": "^4.0.0",
    "core-js": "^2.4.1",
    "rxjs": "^6.1.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-ng-packagr": "~0.6.8",
    "@angular-devkit/build-angular": "~0.6.1",
    "ng-packagr": "^3.0.0-rc.2",
    "@angular/cli": "~6.0.1",
    "@angular/compiler-cli": "^6.0.1",
    "@angular/language-service": "^6.0.1",
    "@nguniversal/express-engine": "^6.0.0",
    "@nguniversal/module-map-ngfactory-loader": "^6.0.0",
    "@types/express": "^4.11.1",
    "@types/node": "~6.0.60",
    "codelyzer": "^4.0.1",
    "cypress": "^2.1.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "jest-preset-angular": "^5.2.1",
    "lint-staged": "^7.0.0",
    "ngx-testing-library": "0.0.5",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.11.1",
    "rxjs-compat": "6.1.0",
    "ts-loader": "^4.2.0",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "tsickle": ">=0.25.5",
    "tslib": "^1.7.1",
    "typescript": "~2.7.2",
    "webpack-cli": "^2.1.2"
  }
}
